<h2>Create a new drone</h2>
<div class='form-container'>
    <form method="POST" action="/drones/create" >
        <div class="form-group">
            <label for="exampleFormControlInput1">Name</label>
            <input type="text" name="name" class="form-control" id="exampleFormControlInput1" placeholder="Jack">
        </div>
          <div class="form-group">
    <label for="exampleFormControlSelect1">Propellers number</label>
    <select name="propellers" class="form-control" id="exampleFormControlSelect1">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
  </div>
    <div class="form-group">
    <label for="exampleFormControlSelect1">Max Speed</label>
    <select name="maxSpeed" class="form-control" id="exampleFormControlSelect1">
      <option>5</option>
      <option>10</option>
      <option>20</option>
      <option>25</option>
      <option>30</option>
      <option>35</option>
      <option>40</option>
      <option>45</option>
      <option>50</option>
    </select>
  </div>
        <button type="submit" class="btn btn-dark">Create</button>
    </form>
</div>